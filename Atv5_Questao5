programa {
	funcao inicio() {
		
		cadeia letra
		
		escreva("Olá, escreva uma letra e eu direi se é vogal ou consoante: ")
		leia(letra)
		limpa()
		
		se(letra == "a" ou letra == "e" ou letra == "i" ou letra == "o" ou letra == "u"){
		    
		    escreva(" (", letra, ") É vogal \n")
		    
		}senao{
		    
		    escreva(" (", letra, ") É consoante \n")
		    
		}
	}
}
